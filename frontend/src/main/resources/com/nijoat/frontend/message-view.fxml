<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nijoat.frontend.controller.MessageController">
   <children>
      <VBox prefHeight="600.0" prefWidth="400.0">
         <children>
            <TextFlow lineSpacing="10.0" prefHeight="576.0" prefWidth="400.0" fx:id="messageFlow" />
            <TextField fx:id="messageField" prefHeight="26.0" prefWidth="400.0" promptText="Send a message..." />
            <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#onButtonSend" text="Send" textFill="#ff7bc3" />
         </children>
      </VBox>
   </children>
</VBox>