<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nijoat.frontend.controller.MessageController">
    <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <bottom>
                    <TextField fx:id="usernameField" promptText="Enter username" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
         </children>
      </VBox>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <bottom>
              <TextField fx:id="messageField" promptText="Enter message" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
      <BorderPane prefHeight="200.0" prefWidth="49.0">
         <bottom>
              <Button fx:id="sendButton" onAction="#sendMessage" text="Send" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
    </children>
</HBox>
