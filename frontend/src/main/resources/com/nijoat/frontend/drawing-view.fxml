<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nijoat.frontend.controller.drawing.DrawingController">

    <top>
        <VBox>
         <ToolBar prefHeight="40.0" prefWidth="200.0">
           <items>
      
                      <HBox alignment="CENTER" spacing="5">
                          <ColorPicker fx:id="colorPicker" prefHeight="25.0" prefWidth="111.0" />
                          <CheckBox fx:id="eraser" />
                      </HBox>
               <Slider fx:id="brushSizeSlider" max="50" min="1" value="12" />
                       <TextField fx:id="brushSize" prefHeight="25.0" prefWidth="31.0" text="18" />
           </items>
         </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" height="600" width="600.0" />
    </center>

</BorderPane>
